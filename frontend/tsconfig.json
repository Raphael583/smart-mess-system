{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",                // ðŸ‘ˆ enables JSX
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./src",                // ðŸ‘ˆ so "@/..." works
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules, ../src"]
}
